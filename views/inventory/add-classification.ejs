<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

    <div class="form-container">
        <form action="/inv/add-classification" method="POST">
            <label for="name">Name:</label>
            <input type="text" id="classification_name" name="classification_name" required pattern="[A-Za-z]+">
            <span>Name must be alphabetic characters only.</span> 
           
            <input type="submit" value="Submit">
        </form>
    </div>