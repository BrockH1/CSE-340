
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    <%- page %>
    <%- reviews %>
    <% if (locals.loggedin) { %>
      <div class="form-container">
        <form action="/inv/review" method="POST">
        <label for="review_name">Screen Name:</label>
        <input type="text" id="review_name" name="review_name" value="<%= locals.accountData.account_firstname %>" required minlength="1">
        <label for="review_text">Review:</label>
        <input type="text" id="review_text" name="review_text" required minlength="3">
        <input type="submit" value="Submit">
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
      <% } %>>
        </form>
      </div>
    <% } else { %>
      <p>You must <a href="/account/login">login</a> to write a review.</p>
    <% } %>