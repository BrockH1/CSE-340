<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    
    <%- messages() %>

    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
  
    <p>Confirm Deletion - The delete is permanent.</p>
    <div class="form-container">
      <form action="/inv/delete" method="post">
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" placeholder="Min of 3 characters" required minlength="3" value="<%= locals.inv_make %>" readonly>
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" placeholder="Min of 3 characters" required minlength="3" value="<%= locals.inv_model %>" readonly>
      <label for="inv_price">Price:</label>
      <input type="text" id="inv_price" name="inv_price" placeholder="decimal or integer" required step="any" value="<%= locals.inv_price %>" readonly>
      <label for="inv_year">Year:</label>
      <input type="text" id="inv_year" name="inv_year" placeholder="4-digit year" required min="1000" value="<%= locals.inv_year %>" readonly> 
      <input type="submit" name="delete" value="Delete">
      <input type="hidden" name="inv_id"
      <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
      <% } %>>
      </form>
    </div>