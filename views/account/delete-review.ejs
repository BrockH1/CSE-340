<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    
    <%- messages() %>

    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
  
    <div class="form-container">
      <form id="deleteForm" action="/account/review/delete" method="post">
      <label for="review_date">Review Date</label>
      <input type="text" id="review_date" name="review_date" value="<%= locals.review_date %>" readonly>
      <label for="review_text">Review Text</label>
      <input type="text" id="review_text" name="review_text" placeholder="Min of 3 characters" required minlength="3" value="<%= locals.review_text %>" readonly>
      <input type="submit" id="submit" name="submit" value="Delete">
      <input type="hidden" name="review_id"
<% if(locals.review_id) { %> value="<%= locals.review_id %>"
<% } %>>
      </form>
    </div>